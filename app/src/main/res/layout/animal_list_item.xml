<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_half_margin"
    android:padding="@dimen/default_half_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/animal_item_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_dog"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/animal_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin"
            android:layout_marginTop="@dimen/default_half_margin"
            app:layout_constraintEnd_toStartOf="@id/animal_item_name_see_qr_code_image_button"
            app:layout_constraintStart_toEndOf="@id/animal_item_image_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome do Pet" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/animal_item_name_see_qr_code_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_background_button"
            android:src="@drawable/icon_see_qr_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/animal_item_breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin"
            android:layout_marginTop="@dimen/default_half_margin"
            app:layout_constraintEnd_toStartOf="@id/animal_item_name_see_qr_code_image_button"
            app:layout_constraintStart_toEndOf="@id/animal_item_image_view"
            app:layout_constraintTop_toBottomOf="@id/animal_item_name"
            tools:text="Nome do Pet" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/animal_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin"
            android:layout_marginTop="@dimen/default_half_margin"
            app:layout_constraintEnd_toStartOf="@id/animal_item_name_see_qr_code_image_button"
            app:layout_constraintStart_toEndOf="@id/animal_item_image_view"
            app:layout_constraintTop_toBottomOf="@id/animal_item_breed"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Nome do Pet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>